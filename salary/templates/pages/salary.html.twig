{% extends "base.html.twig" %}

{% block body %}
	<h1>Salary calulation {{ period }}</h1>
	<a href="/">Back</a>
	<table>
		<tr>
			<th>Person</th>
			<th>Rate</th>
			<th>Additions</th>
			<th>Deductions</th>
			<th>Taxes</th>
			<th>Total</th>
			<th>Updated At</th>
			<th></th>
		</tr>
		{% for row in salary %}
			<tr>
				<td>{{ row.getPersonName() }}</td>
				<td>{{ row.getRate() }}</td>
				<td>{{ row.getAdditions() }}</td>
				<td>{{ row.getDeductions() }}</td>
				<td>{{ row.getTaxes() }}</td>
				<td>{{ row.getTotal() }}</td>
				<td>{{ row.getUpdatedAt().format('d/m/Y H:i') }}</td>
				<td>
					<a href="/person/{{ row.getPersonId() }}/salary/{{ row.getId() }}/">Show details</a>
				</td>
			</tr>
		{% endfor %}
	</table>
{% endblock %}
